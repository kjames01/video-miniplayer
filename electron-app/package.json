{
  "name": "video-miniplayer",
  "version": "1.0.0",
  "description": "Floating video miniplayer for Windows",
  "main": "dist/main/main.js",
  "author": "Video Miniplayer",
  "license": "MIT",
  "scripts": {
    "copy-assets": "node -e \"const fs=require('fs');const path=require('path');['index.html','styles.css'].forEach(f=>fs.copyFileSync(path.join('src/renderer',f),path.join('dist/renderer',f)))\"",
    "bundle-renderer": "esbuild src/renderer/renderer.ts --bundle --outfile=dist/renderer/renderer.js --platform=browser --target=es2020 --sourcemap",
    "dev": "tsc && npm run bundle-renderer && npm run copy-assets && electron .",
    "build": "tsc && npm run bundle-renderer && npm run copy-assets && electron-builder",
    "start": "electron .",
    "compile": "tsc && npm run bundle-renderer && npm run copy-assets",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "npm run compile && npx playwright test",
    "test:e2e:headed": "npm run compile && npx playwright test --headed",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-playwright-helpers": "^2.1.0",
    "esbuild": "^0.27.2",
    "jest": "^29.7.0",
    "playwright": "^1.58.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "youtube-dl-exec": "^3.0.0"
  },
  "build": {
    "appId": "com.miniplayer.video",
    "productName": "Video Miniplayer",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icons/icon.ico"
    },
    "extraResources": [
      {
        "from": "resources/bin/win",
        "to": "bin"
      }
    ]
  }
}
